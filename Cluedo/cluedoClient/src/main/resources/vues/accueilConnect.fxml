<BorderPane fx:id="root" minHeight="600.0" minWidth="800.0" prefWidth="800.0" styleClass="bpConnect" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vues.AccueilConnect">
    <stylesheets>
        <URL value="@../css/application.css" />
    </stylesheets>
   <center>
        <GridPane alignment="CENTER" maxHeight="301.0" maxWidth="600.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="301.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#creerPartieOk" styleClass="btn" text="CREER PARTIE" />
                <Button mnemonicParsing="false" onAction="#rejoindrePartieOk" styleClass="btn" text="REJOINDRE PARTIE" GridPane.rowIndex="1" />
                <Button mnemonicParsing="false" onAction="#deconnexionOk" styleClass="btn" text="SE DECONNECTER" GridPane.rowIndex="4" />
            <Button mnemonicParsing="false" onAction="#desabonnementOk" styleClass="btn" text="SE DESABONNER" GridPane.rowIndex="3" />
            <Button mnemonicParsing="false" onAction="#restaurerPartieOk" styleClass="btn" text="RESTAURER PARTIE" GridPane.rowIndex="2" />
            </children>
        </GridPane>
   </center>
   <top>
      <ImageView fitHeight="265.0" fitWidth="592.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../images/LOGO_cluedo.png" />
         </image>
      </ImageView>
   </top>
   <bottom>
      <Label fx:id="nom" text="" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
